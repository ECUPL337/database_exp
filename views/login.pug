extends drawer

append head
    link(rel="stylesheet" href="/stylesheets/loginBox.css")
block content
    #loginBox.mdui-card.mdui-m-t-5
        form#loginForm.mdui-card-media.mdui-p-a-2
            div.mdui-textfield
                i.mdui-icon.material-icons account_circle
                lable.mdui-textfield-label 用户名
                input.mdui-textfield-input(type="text" form="loginForm" name="username" required)
            div.mdui-textfield
                i.mdui-icon.material-icons lock
                lable.mdui-textfield-label 密码
                input.mdui-textfield-input(type="password" form="loginForm" name="password" required)

        .mdui-card-actions
            button.mdui-btn.mdui-ripple#loginBtn 登录
            button.mdui-btn.mdui-ripple#AdminLoginBtn 管理员登录
            button.mdui-btn.mdui-ripple#register 注册

append end
    script(src="/javascripts/loginBox.js")